set env(HOME) "/root"
spawn ./goemqutiti -p HiveMQ
sleep 1
# connect using the first broker in the list
send "\r"
sleep 1
# add topic and publish a message
send "test/topic\r"
# move focus to message input
send "\t"
send "Hello"
send \u0013   ;# Ctrl+S to publish
send \u0004   ;# Ctrl+D to exit
expect eof
exec stty sane
